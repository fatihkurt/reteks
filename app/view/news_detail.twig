{% extends "layout/main.layout.twig" %}


{% block content %}

        {% if content.page.image1 != '' %}
        <div class="banner">
            <img src="/upload/page/{{ content.page.image1 }}" />
            <div class="banner-txt">
                <div class="banner-caption">
                    {{ T.news }}<br>
                </div>
            </div>
        </div>
        {% endif %}

        <div class="news-content">
                <h3 class="page-title">{{ upperTR(content.title) }}</h3>

                {% include 'partial/breadjump.twig' %}

                <div class="news-detail">
                    <div class="news-text">
                    
                        <img class="news-detail-image" src="/upload/news/{{ item.news.image }}" />
                        
                        <h4 class="news-detail-title">{{ item.titleÂ }}</h4>

                        {{ item.content|raw }}
                    </div>
                </div>
                <div class="news-other-link"><a href="/{{ lang }}/{{ content.seo_url }}">{{ T.oher_news }}</a></div>
        </div>
{% endblock %}
