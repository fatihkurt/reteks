{% extends "layout/main.layout.twig" %}


{% block content %}

    
    
        <div class="banner main-banner">
        
<div class="banner-inner">
<img src="/img/promo_1.jpg" />
<div class="banner-text">{{ T.banner_text1 }}</div>
</div>

<div class="banner-inner">
<img src="/img/promo_2.jpg" />
<div class="banner-text">{{ T.banner_text2 }}</div>
</div>

<div class="banner-inner">
<img src="/img/promo_3.jpg" />
<div class="banner-text">{{ T.banner_text3 }}</div>
</div>
        
            
        </div>
        
        <div class="middle-content">
            <div class="m-row">
            
            {% for idx,page in pages %}
            
                <div class="m{{ idx + 1 }} m-item">
                <img src="/upload/page/{{ page.image2 }}" />
                <div class="m-badget mb{{ idx + 1 }}">
                    <div class="goto">
                        <a href="/{{ lang ~ '/' ~ page.content(lang).seo_url }}">{{ page.content(lang).title }}</a> <br />
                        <a href="/{{ lang ~ '/' ~ page.content(lang).seo_url }}" class="detail">{{ T.detail_info }}</a>
                    </div>
                </div>
            </div>
            
            {% endfor %}

        </div>
            
            <div class="m-row mt30">
                <div class="extra-content">
                    <img class="company-present-img" src="/img/m_company.png" />
                    <div  class="company-info">

                        <h2>R & E TEKS</h2>

                        <h3>{{ T.company_slogan }}</h3>

                        <p>{{ thePage.content(lang).description }}</p>
                   
                        <div class="btn-holder"><a class="btn-devam" href="#">{{ T.company_button }}</a></div>
                   </div>
                </div>
            </div>
        </div>

        <div class="middle-right">
            
            <div class="right-col news">
                <div class="r-header">{{ T.news }}</div>
                
                
                <div class="news-slider">
                <a class="arrows-up slidesjs-previous slidesjs-navigation"></a>
                <a class="arrows-down slidesjs-next slidesjs-navigation"></a>
                {% for item in news %}
                <div>
                <label>{{ item.start_date|date("d.m.Y") }}</label>
                <h4>{{ item.content.title }}</h4>
                <p>{{ item.content.content }}</p>
                </div>
                {% endfor %}
                </div>
            </div>
        
            <div class="right-col">
                <img src="../img/video_preview.png" />
            </div>
            
            <div class="right-col ebulten">
                <div class="ebulten-inner">
                    <h4 class="ebulten-title">{{ T.ebulten_title }}</h4>
                    <div class="ebulten-text">{{ T.ebulten_text }}</div>
                    <input type="email" class="ebulten-input" placeholder="{{ T.ebulten_email }}" />
                    <a class="ebulten-btn" href="">{{ T.be_member }}</a>
                </div>
            </div>
        </div>

{% endblock %}
